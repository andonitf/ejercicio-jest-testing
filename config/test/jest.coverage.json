{
  "rootDir": "../../",
  "preset": "ts-jest",
  "setupFiles": [
    "<rootDir>/config/test/polyfills.js",
    "<rootDir>/config/test/setupTest.js"
  ],
  "restoreMocks": true,
  "snapshotSerializers": [
    "enzyme-to-json/serializer"
  ],
  "moduleNameMapper": {
    "^.+\\.s?css$": "identity-obj-proxy"
  },
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "branches": 60,
      "functions": 60,
      "lines": 60,
      "statements": -10
    }
  },
  "coverageReporters": [
    "text",
    "html"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "config/test"
  ]
}
